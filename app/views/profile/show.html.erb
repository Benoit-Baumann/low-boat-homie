<div class="container">
  <h1 class="my-profil">Mon profil</h1>
<aside class="profile-card">
  <header>
      <%= image_tag current_user.photo.url(:bright_face), class: "avatar-extra-large" %>
    <h1><%= @user.first_name %> <%= @user.last_name %></h1>

  </header>
  <div class="profile-bio">
    <h4><%= @user.email %></h4>
    <h4><%= @user.address %></h4>
  </div>
</aside>
<div class="d-flex justify-content-center profile-links">
<p class="btn-log"><%= link_to "Voir mes locations", rentals_path %></p><p class="btn-log"><%= link_to "Voir mes bateaux", my_boats_path %></p><p class="btn-log"><%= link_to 'Editer mon profil', edit_user_registration_path  %></p>
</div>

