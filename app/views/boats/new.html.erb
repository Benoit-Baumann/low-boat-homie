<div class="custom-container">
  <div class="sign-title">
    <h2>Ajouter un nouveau bateau</h2>

    <div class="sign-up form-inputs">
      <%= simple_form_for [@boat] do |f| %>
        <%= f.input :name %>
        <%= f.input :category %>
        <%= f.input :location %>
        <%= f.input :description%>
        <%= f.input :price %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %> 
        <%= f.submit "Ajouter ce bateau", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>