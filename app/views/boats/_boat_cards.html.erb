<div class="row cards">
    <% boats.each do |boat| %>
    <% if boat.photo? %>
        <% background_url = cl_image_path boat.photo, width: 400, height: 500, crop: :fill %>
    <% else %>
        <% background_url = image_path 'boat.jpg' %>
    <% end %>
    <div class="card-boat">
        <%= link_to "", boat_path(boat), class: 'card-link' %>
        <img src="<%= background_url %>" />
        <div class="card-boat-infos">
        <div>
            <h2><%= boat.name %></h2>
            <p><%= boat.category %></p>
            <p><%= boat.location %></p>
        </div>
        <div>
            <h2 class="card-boat-pricing"><%= boat.price %> â‚¬/jour</h2>
            <% if boat.owner.photo? %>
            <% avatar_url = cl_image_path boat.owner.photo, width: 400, height: 500, crop: :fill %>
            <% else %>
            <% avatar_url = image_path 'default_avatar.svg' %>
            <% end %>
            <img src="<%= avatar_url %>" class="card-trip-user avatar-bordered" />
        </div>
        </div>
    </div>
    <% end %>
</div>
