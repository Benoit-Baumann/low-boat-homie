<%= form_tag boats_path, class: 'search-form-control form-group', method: :get do %>
    <%= text_field_tag :city,
    params[:city],
    class: "search-bar",
    placeholder: "Entrez une ville"
    %>

    <%= select_tag :distance,
    options_for_select([['5km' ,'5'], ['10km' ,'10'], ['25km' ,'25'], ['50km' ,'50']]) 
    %>

    <%= button_tag(type: "submit", class: "btn btn-primary") do %>
        Search <i class="fas fa-search"></i>
    <% end %>
<% end %>