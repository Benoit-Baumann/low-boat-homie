<div class="container">
  <div class="sign-title">

    <h1 class="title-page">Editer mon bateau</h1>

    <div class="sign-up form-inputs">
      <%= simple_form_for [@boat] do |f| %>
        <%= f.input :name %>
        <%= f.input :category %>
        <%= f.input :location %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit "Edit the boat", class: "btn btn-primary" %>
      <% end %>
      
    </div>
  </div>
</div>
