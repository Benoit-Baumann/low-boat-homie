<div class="container">
<div class="sign-title">
<h1 class="title-page">Edit my boat</h1>
<%= simple_form_for [@boat] do |f| %>
  <%= f.input :name %>
  <%= f.input :category %>
  <%= f.input :location %>
  <%= f.input :description%>
  <%= f.input :price %>
  <%= f.submit "Edit the boat", class: "btn btn-primary" %>
<% end %>
</div>
</div>
