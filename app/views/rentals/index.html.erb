  <div class="container mt-5">
  <% @rentals.each do |rental| %>
    <div class="card-product justify-content-between mb-4">
      <div class="d-flex align-items-center">
      <% if rental.boat.photo? %>
          <% background_url = cl_image_path rental.boat.photo, width: 400, height: 500, crop: :fill %>
      <% else %>
          <% background_url = image_path 'boat.jpg' %>
      <% end %>
      <img src="<%= background_url %>" />
      <div class="card-product-infos">
        <h2><%= rental.boat.name %></h2>
        <p><%= rental.date %></p>
      </div>
      </div>
      <div class="text-right mr-4 align-items-center">
      <%= link_to("", edit_rental_path(rental), class: 'fas fa-edit fa-2x mr-4 mb-4') %>
      <br>
      <%= link_to("", rental_path(rental),
              class: 'far fa-trash-alt fa-2x mr-4 mt-4',
              method: :delete,
              data: { confirm: "Are you sure?" }) %>
      </div>
    </div>
  <% end %>
